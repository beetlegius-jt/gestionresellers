<div class="container">

  <%= content_tag :div, notice, class: 'alert alert-success', role: :alert if notice %>
  <%= content_tag :div, alert, class: 'alert alert-danger', role: :alert if alert %>

  <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' } do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="email" class="sr-only">Email address</label>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>
    <!-- <input type="email" id="email" class="form-control" placeholder="Email address" required autofocus> -->
    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true, autocomplete: :off %>
    <!-- <input type="password" id="inputPassword" class="form-control" placeholder="Password" required> -->
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    <% end -%>

    <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
    <!-- <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button> -->
  <% end %>

</div> <!-- /container -->
