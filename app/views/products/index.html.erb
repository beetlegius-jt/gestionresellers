<div class="page-header">
  <h1>
    Products
    <small><%= pluralize @products.size, 'product' %></small>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="col-xs-1"></th>
          <th>Name</th>
          <th>Price</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <%= content_tag :tbody, render(@products) %>
    </table>
  </div>
</div>
