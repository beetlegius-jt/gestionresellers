<div class="page-header">
  <h1>
    Orders
    <small><%= pluralize @orders.size, 'order' %> in last 60 days</small>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Number</th>
          <th>Date</th>
          <th>Total price</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <%= content_tag :tbody, render(@orders) %>
    </table>
  </div>
</div>
